volScalarField nu(laminarTransport.nu());
//- the net dictionary
IOdictionary netDict
(
    IOobject
    (
        "netDict",
        runTime.constant(),
        mesh,
        IOobject::MUST_READ,
        IOobject::NO_WRITE
    )
);

//- the porosity field
volScalarField porosityField
(
    IOobject
    (
        "porosityField",
        runTime.timeName(),
        mesh,
        IOobject::READ_IF_PRESENT,
        IOobject::AUTO_WRITE
    ),
    mesh,
    1.0
);

netPanel pZones(netDict,mesh,nu,Uqn);

pZones.updatePoroField(porosityField, mesh, netDict);

labelList zoneIDList(pZones.zoneIDs());

//- write the porosity field
porosityField.write();

List<vectorField> vertexUField
                  (
                      pZones.calcNumMassLayer(),
                      vectorField
                      (
                          pZones.calcNumMassPerQuarter()*4+4,
                          vector::zero
                      )
                  );